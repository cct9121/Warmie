<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.warmie.NameActivity"
    android:background="#ede7f6" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:text="小暖保證你的資料是安全的！" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="First &amp; Last Name"
            android:inputType="textPersonName"
            android:text="@string/edittext_name" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:hint="name@example.com"
            android:inputType="textEmailAddress"
            android:text="@string/edittext_email" />

        <EditText
            android:id="@+id/editText_pwd"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:hint="8 characters"
            android:inputType="textPassword"
            android:text="@string/edittext_pwd" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText_birth"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:hint="Required"
            android:inputType="date"
            android:text="@string/edittext_birth" />

        <Button
            android:id="@+id/nameb_register_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" 
            android:layout_marginTop="40dp"
            android:background="@color/purple"
            android:gravity="center"
            android:text="註冊"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>